<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/MS_searchLayout"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/MS_editSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Matter Search Text"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/MS_btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:text="Search" />
        <Button
            android:id="@+id/MS_btnReports"
            android:layout_marginTop="30dp"
            android:text="@string/reports"
            android:visibility="gone"
            android:layout_below="@id/MS_editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/splash"
        android:layout_below="@id/MS_searchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/launch_640x960" />

    <ListView
        android:layout_below="@id/MS_searchLayout"
        android:id="@+id/MS_list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>